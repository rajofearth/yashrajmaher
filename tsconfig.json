{
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"noEmit": true,
		"incremental": true,
		"module": "esnext",
		"esModuleInterop": true,
		"moduleResolution": "Bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"@/components/*": ["components/*"],
			"@/app/*": ["app/*"],
			"@/lib/*": ["lib/*"],
			"@/public/*": ["public/*"],
			"@/utils/*": ["app/utils/*"]
		}
	},
	"include": ["next-env.d.ts", ".next/types/**/*.ts", "**/*"],
	"exclude": ["node_modules"]
}
