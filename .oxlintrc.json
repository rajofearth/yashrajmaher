{
  "plugins": ["react", "unicorn", "typescript", "oxc"],
  "env": {
    "browser": true,
    "node": true,
    "es2022": true
  },
  "categories": {
    "correctness": "error",
    "suspicious": "warn",
    "style": "off"
  },
  "rules": {
    "no-console": "warn",
    "no-alert": "error",
    "no-debugger": "error",
    "no-unused-vars": "warn",
    "no-undef": "error",
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off",
    "unicorn/filename-case": "off",
    "typescript/no-explicit-any": "warn",
    "no-magic-numbers": "off",
    "import/order": "off"
  },
  "ignorePatterns": [
    "node_modules",
    ".next",
    "build",
    "dist",
    "coverage",
    "public/Bposts/*",
    "public/devposts/*",
    "*.lock",
    "*.log",
    ".env*",
    ".vercel",
    "*.tsbuildinfo",
    "convex/",
    "prisma/",
    "public/*",
    "generated/*",
    "components/ui/*"
  ],
  "overrides": [
    {
      "files": ["**/*.{ts,tsx}"],
      "plugins": ["typescript"],
      "rules": {
        "typescript/no-explicit-any": "error"
      }
    },
    {
      "files": ["**/test/**"],
      "plugins": ["jest"],
      "env": { "jest": true },
      "rules": {
        "jest/no-disabled-tests": "off"
      }
    },
    {
      "files": ["middleware.ts", "app/auth.ts", "app/(auth)/**/*.ts", "app/api/**/*.ts"],
      "env": { "node": true },
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": ["script.ts"],
      "env": { "node": true },
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": ["app/(blogs)/**/*.{js,jsx,ts,tsx}"],
      "env": { "browser": true, "node": true },
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": ["components/**/*.{js,jsx,ts,tsx}"],
      "env": { "browser": true },
      "rules": {
        "no-console": "warn"
      }
    }
  ]
}
